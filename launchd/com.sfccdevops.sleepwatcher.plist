<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Debug</key>
    	<true/>
		<key>Label</key>
		<string>com.sfccdevops.sleepwatcher</string>
		<key>ProgramArguments</key>
		<array>
			<string>/opt/homebrew/opt/sleepwatcher/sbin/sleepwatcher</string>
			<string>--verbose</string>
			<string>--sleep</string>
			<string>~/.sfccdevops/sdx-stop</string>
			<string>--wakeup</string>
			<string>~/.sfccdevops/sdx-start</string>
			<string>--displaysleep</string>
			<string>~/.sfccdevops/sdx-stop</string>
			<string>--displaywakeup</string>
			<string>~/.sfccdevops/sdx-start</string>
		</array>
		<key>RunAtLoad</key>
		<true/>
		<key>KeepAlive</key>
		<true/>
		<key>StandardOutPath</key>
		<string>~/.sfccdevops/sandbox.log</string>
		<key>StandardErrorPath</key>
		<string>~/.sfccdevops/sandbox.log</string>
	</dict>
</plist>
